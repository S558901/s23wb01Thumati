extends layout

block content
  h1= title
  p Welcome back to #{title} modifed by Sree Chetan Reddy Thumati

  - results = [{ telephone: "highend", size: "large", cost: 300 },{ telephone: "basic", size: "med", cost: 200 },{ telephone: "compact", size: "small", cost: 600 }];
  div.container-fluid 
    -
    div.row 
    -
    each item, index in results
        div.col-sm-6
            h2= item.telephone
            p= item.telephone_size 
            p= "cost: $"+item.cost.toFixed(2)
            div.row
                each prop, i in Object.keys(item)
                    div(col-sm-2,  onclick=`buy(${index})`)
                        p #{Object.keys(item)[i]}: #{item[prop]}

        script.
            function buy (index){
                alert (`You purchased item ${index+1}`)    
            }